{
  "auto_compact": true,
  "history_file_path": "~/.claude/history.json",
  "commands": [
    {
      "name": "do-plan",
      "file": "~/.claude/commands/do-plan.md",
      "description": "기능 구현을 위한 계획 수립 및 작업 파일 생성 (대화형)"
    },
    {
      "name": "do-task",
      "file": "~/.claude/commands/do-task.md",
      "description": "기능의 다음 작업을 자동으로 식별하고 실행, 완료 시 체크리스트 리뷰"
    },
    {
      "name": "do-commit",
      "file": "~/.claude/commands/do-commit.md",
      "description": "변경점을 분석하여 요약하고 자동으로 git commit 생성"
    },
    {
      "name": "do-progress",
      "file": "~/.claude/commands/do-progress.md",
      "description": "checklist.md 기반으로 진행률을 시각적으로 표시"
    },
    {
      "name": "do-deploy",
      "file": "~/.claude/commands/do-deploy.md",
      "description": "배포 지시 파일(DEPLOY.md)을 읽고 배포 프로세스 실행"
    },
    {
      "name": "do-todo",
      "file": "~/.claude/commands/do-todo.md",
      "description": "Plan mode 검토 완료된 계획을 TODO 작업 파일로 변환"
    }
  ],
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [{"type": "command", "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/gatekeeper.py"}]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [{"type": "command", "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/auto_logger.py"}]
      }
    ],
    "Stop": [
      {
        "hooks": [{"type": "command", "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/quality_gate.py"}]
      }
    ]
  }
}
